{{#partial "content"}}

    <p>Content:</p>

    <p>{{ department }}</p>
    <h5>Department status:</h5>
    <p>
        {{#if created }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Created
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
        {{/if}}

        <a href="/posts/{{id}}/update">Edit this Department</a><br>
        <a href="/posts/{{id}}/delete">DELETE this Department (no undo)</a>
    </p>

{{/partial}}

{{> layout.hbs}}